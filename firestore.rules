rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /* -----------------------------
       AUTH HELPERS
    ----------------------------- */
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && request.auth.token.admin == true;
    }

    function isOwner() {
      return isSignedIn() && request.auth.token.owner == true;
    }

    function isTeacher() {
      return isSignedIn() && request.auth.token.teacher == true;
    }

    function isPrivileged() {
      return isAdmin() || isOwner();
    }

    function isClassStaff() {
      return isAdmin() || isOwner() || isTeacher();
    }

    /*
      User saját osztályának ellenőrzése
      classId = classFinishes + classType (pl. 2030e)
    */
    function userBelongsToClass(classId) {
      return isSignedIn()
        && exists(/databases/$(database)/documents/users/$(request.auth.uid)/groups/ownclass)
        && (
          get(/databases/$(database)/documents/users/$(request.auth.uid)/groups/ownclass)
            .data.classFinishes +
          get(/databases/$(database)/documents/users/$(request.auth.uid)/groups/ownclass)
            .data.classType
        ) == classId;
    }

    /*
      Active staff session check
    */
    function hasActiveStaffSession() {
      return isSignedIn()
        && exists(/databases/$(database)/documents/staffSessions/$(request.auth.uid))
        && get(/databases/$(database)/documents/staffSessions/$(request.auth.uid)).data.active == true
        && get(/databases/$(database)/documents/staffSessions/$(request.auth.uid)).data.endTime > request.time;
    }

    /* -----------------------------
       CLASSES
    ----------------------------- */
    match /classes/{classId} {
      allow read: if isClassStaff() || userBelongsToClass(classId);
      allow write: if isClassStaff() && hasActiveStaffSession();

      match /grades/{gradeId} {
        allow read: if isClassStaff() || userBelongsToClass(classId);
        allow write: if isClassStaff() && hasActiveStaffSession();
      }

      // jövőbeli alkollekciók engedélyezve
      match /{document=**} {
        allow read: if isClassStaff() || userBelongsToClass(classId);
        allow write: if isClassStaff() && hasActiveStaffSession();
      }
    }

    /* -----------------------------
       STAFF SESSIONS
    ----------------------------- */
    match /staffSessions/{userId} {
      allow read: if isSignedIn() && request.auth.uid == userId;
      allow write: if false;
    }

    /* -----------------------------
       CLASS WRITE ATTEMPTS
    ----------------------------- */
    match /classWriteAttempts/{userId} {
      allow read: if isSignedIn() && (request.auth.uid == userId || isPrivileged());
      allow write: if false;
    }

    /* -----------------------------
       CLASS WRITE ACCESS LOGS
    ----------------------------- */
    match /classWriteAccessLogs/{logId} {
      allow read: if isPrivileged();
      allow write: if false;
    }

    /* -----------------------------
       VERSION
    ----------------------------- */
    match /version/{document=**} {
      allow read: if true;
      allow write: if isPrivileged();
    }

    /* -----------------------------
       FEEDBACK
    ----------------------------- */
    match /homePageData/feedback/{subcollection}/{document=**} {
      allow write: if isSignedIn();
      allow read: if isClassStaff();
    }

    /* -----------------------------
       EVENTS / NEWS / NEW-THINGS
    ----------------------------- */
    match /homePageData/{docId}/{document=**} {
      allow read: if docId in ['events', 'news', 'new-things'];
      allow write: if isClassStaff();
    }

    /* -----------------------------
       USERS (PRIVATE)
    ----------------------------- */
    match /users/{userId} {
      // read: saját user VAGY staff
      allow read: if isSignedIn() && (
        request.auth.uid == userId ||
        isClassStaff()
      );

      match /{document=**} {
        allow read, write: if isSignedIn() && (
          request.auth.uid == userId ||
          isClassStaff()
        );
      }
    }

    /* -----------------------------
       PUBLIC USER CARDS
    ----------------------------- */
    match /public/users/{collection}/{userId} {
      allow read: if true;
      allow write: if isSignedIn() && request.auth.uid == userId;
    }

    /* -----------------------------
       SUGGESTIONS
    ----------------------------- */
    match /suggestions/{suggestionId} {
      allow read: if true;
      allow write: if isSignedIn()
        && request.resource.data.ownerId == request.auth.uid;
    }

    match /users/{userId}/suggestions/{suggestionId} {
      allow read: if isSignedIn() && request.auth.uid == userId;
      allow write: if isSignedIn()
        && request.auth.uid == userId
        && request.resource.data.ownerId == request.auth.uid;
    }

    /* -----------------------------
       EVENT HUB
    ----------------------------- */
    match /event_hub/{document=**} {
      allow read: if true;
      allow write: if isClassStaff();
    }

    /* -----------------------------
       EVENTS
    ----------------------------- */
    match /events/{document=**} {
      allow read: if true;
      allow write: if isClassStaff();
    }

    /* -----------------------------
       GROUPS
    ----------------------------- */
    match /groups/{document=**} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    /* -----------------------------
       SETTINGS
    ----------------------------- */
    match /settings/{userId}/{document=**} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;
    }

    /* -----------------------------
       ADMIN
    ----------------------------- */
    match /admin/{document=**} {
      allow read, write: if isAdmin();
    }

    /* -----------------------------
       ANNOUNCEMENTS
    ----------------------------- */
    match /announcements/{document=**} {
      allow read: if isSignedIn();
      allow write: if isTeacher() || isAdmin();
    }

    /* -----------------------------
       GRAPH TOKENS
    ----------------------------- */
    match /graphTokens/{userId} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;
    }

    /* -----------------------------
       FALLBACK (LOCKED)
    ----------------------------- */
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
