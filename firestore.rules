rules_version = '2';

service cloud.firestore {
  match / databases / { database } / documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && request.auth.token.admin == true;
    }

    function isOwner() {
      return isSignedIn() && request.auth.token.owner == true;
    }

    function isTeacher() {
      return isSignedIn() && request.auth.token.teacher == true;
    }

    function isPrivileged() {
      return isAdmin() || isOwner();
    }

    function isClassStaff() {
      return isAdmin() || isOwner() || isTeacher();
    }

    // -----------------------------
    // User saját osztályának ellenőrzése
    // classId = classFinishes + classType (pl. 2030e)
    // -----------------------------
    function userBelongsToClass(classId) {
      return isSignedIn()
        && exists(
          /databases/$(database) / documents / users / $(request.auth.uid) / groups / ownclass
        )
        && (
          get(
            /databases/$(database) / documents / users / $(request.auth.uid) / groups / ownclass
          ).data.classFinishes
          +
          get(
            /databases/$(database) / documents / users / $(request.auth.uid) / groups / ownclass
          ).data.classType
        ) == classId;
    }

    // -----------------------------
    // CLASSES
    // -----------------------------
    match / classes / { classId } {
      allow read: if isClassStaff() || userBelongsToClass(classId);
      allow write: if isClassStaff();

      match / grades / { gradeId } {
        allow read: if isClassStaff() || userBelongsToClass(classId);
        allow write: if isClassStaff();
      }

      match / { document=**} {
        allow read, write: if isClassStaff();
      }
    }

    // -----------------------------
    // USER LOOKUP
    // -----------------------------
    match / userlookup / names / { normalizedName } / { uid } {
      allow read, get, list: if isTeacher() || isOwner() || isAdmin();
      allow write: if false;
    }

    // -----------------------------
    // VERSION
    // -----------------------------
    match / version / { document=**} {
      allow read: if true;
      allow write: if isPrivileged();
    }

    // -----------------------------
    // FEEDBACK
    // -----------------------------
    match / homePageData / feedback / { subcollection } / { document=**} {
      allow write: if true;
      allow read: if isClassStaff();
    }

    // -----------------------------
    // EVENTS / NEWS / NEW-THINGS
    // news csak Cloud Functionből írható
    // -----------------------------
    match / homePageData / { docId } / { document=**} {
      allow read: if docId in ['events', 'news', 'new-things'];
      allow write: if isClassStaff() && docId != 'news';
    }

    // News hirek collection - only Cloud Functions
    match / homePageData / news / hirek / { newsId } {
      allow read: if true;
      allow write: if false;
    }

    // News meta (ID counter) - only Cloud Functions
    match / homePageData / news / meta {
      allow read: if isClassStaff();
      allow write: if false;
    }

    // -----------------------------
    // USERS
    // -----------------------------
    match / users / { userId } {
      allow read: if true;

      match / { document=**} {
        allow read, write: if isSignedIn()
          && (request.auth.uid == userId || isClassStaff());
      }
    }

    // -----------------------------
    // PUBLIC USER CARDS
    // -----------------------------
    match / public / users / { collection } / { userId } {
      allow read: if true;
      allow write: if isSignedIn() && request.auth.uid == userId;
    }

    // -----------------------------
    // SUGGESTIONS
    // -----------------------------
    match / suggestions / { suggestionId } {
      allow read: if true;
      allow write: if isSignedIn()
        && request.resource.data.ownerId == request.auth.uid;
    }

    match / users / { userId } / suggestions / { suggestionId } {
      allow read: if isSignedIn() && request.auth.uid == userId;
      allow write: if isSignedIn()
        && request.auth.uid == userId
        && request.resource.data.ownerId == request.auth.uid;
    }

    // -----------------------------
    // EVENT HUB
    // -----------------------------
    match / event_hub / { document=**} {
      allow read: if true;
      allow write: if isClassStaff();
    }

    // -----------------------------
    // EVENTS
    // -----------------------------
    match / events / { document=**} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    // -----------------------------
    // GROUPS
    // -----------------------------
    match / groups / { document=**} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    // -----------------------------
    // SETTINGS
    // -----------------------------
    match / settings / { userId } / { document=**} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;
    }

    // -----------------------------
    // ADMIN
    // -----------------------------
    match / admin / { document=**} {
      allow read, write: if isAdmin();
    }

    // -----------------------------
    // ANNOUNCEMENTS
    // -----------------------------
    match / announcements / { document=**} {
      allow read: if isSignedIn();
      allow write: if isTeacher() || isAdmin();
    }

    // -----------------------------
    // GRAPH TOKENS
    // -----------------------------
    match / graphTokens / { userId } {
      allow read, write: if isSignedIn() && request.auth.uid == userId;
    }

    // -----------------------------
    // FALLBACK
    // -----------------------------
    match / { document=**} {
      allow read: if isPrivileged();
      allow write: if isSignedIn();
    }
  }
}