rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - csak saját adatok olvasása/írása
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // General data subcollection
      match /general_data/{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Settings collection - csak saját beállítások
    match /settings/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      match /{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Admin only collections
    match /admin/{document=**} {
      allow read, write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Teacher accessible collections
    match /classes/{document=**} {
      allow read: if request.auth != null && 
        (request.auth.token.teacher == true || request.auth.token.admin == true);
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Public read collections
    match /announcements/{document=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        (request.auth.token.teacher == true || request.auth.token.admin == true);
    }
    
    // Graph tokens collection - users can write their own tokens
    match /graphTokens/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}